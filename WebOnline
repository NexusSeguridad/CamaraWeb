<body>
  <h2>ğŸ“· Captura y AnÃ¡lisis Inteligente</h2>
  <video id="video" autoplay playsinline width="300"></video><br>
  <button onclick="captureAndAnalyze()">ğŸ“¸ Capturar y Analizar</button>
  <canvas id="canvas" width="300" height="225" style="display:none;"></canvas>
  <div id="result">ğŸ” Esperando captura...</div>

  <script>
    let model;
    const video = document.getElementById('video');
    const canvas = document.getElementById('canvas');
    const result = document.getElementById('result');

    async function initCamera() {
      const stream = await navigator.mediaDevices.getUserMedia({ video: true });
      video.srcObject = stream;
    }

    async function loadModel() {
      model = await mobilenet.load();
    }

    async function captureAndAnalyze() {
      const ctx = canvas.getContext('2d');
      ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
      const imgData = tf.browser.fromPixels(canvas);
      const predictions = await model.classify(imgData);
      imgData.dispose();

      if (predictions.length > 0) {
        const { className, probability } = predictions[0];
        const suggestion = getSuggestion(className);
        result.innerHTML = `ğŸ” Detectado: <b>${className}</b> (${(probability*100).toFixed(1)}%)<br>ğŸ’¡ Sugerencia: ${suggestion}`;
      } else {
        result.textContent = "No se pudo identificar la imagen.";
      }
    }

    function getSuggestion(label) {
      if (label.includes("helmet")) return "âœ… EPP correcto. Buen ejemplo.";
      if (label.includes("person")) return "âš ï¸ Verificar si lleva casco, guantes y protecciÃ³n.";
      if (label.includes("mess")) return "ğŸ§¹ Se recomienda ordenar el espacio para evitar accidentes.";
      return "â„¹ï¸ No se detectaron riesgos evidentes.";
    }

    initCamera();
    loadModel();
  </script>
</body>
